          <div class="row">
            <div
              class="column"
              style="
                margin-left: 60px;
                color: white;
                font-weight: bold;
                margin-top: 7px;
              "
            >
              <P>Welcome To SB Express</P>
            </div>
            <div class="row">
              <div class="column" style="margin-left: 70px"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="header1">
        <p
          style="
            color: white;
            text-align: center;
            font-weight: bold;
            font-size: 22px;
            margin-top: -10px;
          "
        >
          login
        </p>
      </div>
      <form method="POST" action="/" >
        <div class="container1">
          Login ID: <input type="email" name="email" required><br>
          Password: <input type="password" name="password" required><br>
          <button type="submit">Log In</button>
          <button type="reset" >Clear</button>
        </div>
      </form>
